            if (profiles[profileId]) {
                modalName.textContent = profiles[profileId].name;
                modalTitle.textContent = profiles[profileId].title || '';
                modalContent.innerHTML = profiles[profileId].content;
                modal.classList.remove('hidden');
                modal.style.display = 'flex';
                document.body.style.overflow = 'hidden';
                
                // Re-initialize lucide icons in the modal
                setTimeout(() => {
                    lucide.createIcons();
                }, 200);
            }
        }
        
        window.closeProfileModal = function() {
            console.log('Close button clicked!'); // Debug log
            const modal = document.getElementById('profileModal');
            modal.classList.add('hidden');
            modal.style.display = 'none';
            document.body.style.overflow = '';
        }
        
        // Close modal on escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape' && !document.getElementById('profileModal').classList.contains('hidden')) {
                window.closeProfileModal();
            }
        });
        
        // Close modal on click outside
        document.getElementById('profileModal').addEventListener('click', function(e) {
            if (e.target === this) {
                window.closeProfileModal();
            }
        });
        
        // Close button event listener - add with delay to ensure DOM is ready
        setTimeout(function() {
            const closeBtn = document.getElementById('modalCloseBtn');
            if (closeBtn) {
                closeBtn.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    console.log('Close button clicked!');
                    window.closeProfileModal();
                });
            }
        }, 500);
    </script>

    
    
