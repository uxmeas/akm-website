    <!-- Scripts -->
    <script>
        // Navigation scroll effect
        window.addEventListener('scroll', () => {
            const navContainer = document.getElementById('navContainer');
            if (window.scrollY > 50) {
                navContainer.classList.remove('bg-black/25');
                navContainer.classList.add('bg-black/75');
            } else {
                navContainer.classList.remove('bg-black/75');
                navContainer.classList.add('bg-black/25');
            }
        });
        
        // Initialize Lucide icons with delay
        setTimeout(() => {
            lucide.createIcons();
        }, 100);
        
        // Re-initialize on dynamic content changes
        // Debounced icon creation to prevent performance issues
        let iconTimeout;
        const observer = new MutationObserver(() => {
            clearTimeout(iconTimeout);
            iconTimeout = setTimeout(() => {
                lucide.createIcons();
            }, 100);
        });
        observer.observe(document.body, { childList: true, subtree: true });
        
        // Mobile menu functionality
        const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
        const mobileMenuOverlay = document.getElementById('mobile-menu-overlay');
        const closeMenuButton = document.getElementById('close-menu-button');
        
        // Mobile dropdown toggles
        const solutionsToggle = document.getElementById('solutions-mobile-toggle');
        const solutionsMenu = document.getElementById('solutions-mobile-menu');
        const industriesToggle = document.getElementById('industries-mobile-toggle');
        const industriesMenu = document.getElementById('industries-mobile-menu');

        solutionsToggle.addEventListener('click', () => {
            solutionsMenu.classList.toggle('hidden');
            solutionsToggle.style.transform = solutionsMenu.classList.contains('hidden') ? 'rotate(0deg)' : 'rotate(45deg)';
        });

        industriesToggle.addEventListener('click', () => {
            industriesMenu.classList.toggle('hidden');
            industriesToggle.style.transform = industriesMenu.classList.contains('hidden') ? 'rotate(0deg)' : 'rotate(45deg)';
        });
        
        mobileMenuToggle.addEventListener('click', function() {
            mobileMenuOverlay.classList.add('active');
            document.body.style.overflow = 'hidden';
        });
        
        function closeMobileMenu() {
            mobileMenuOverlay.classList.remove('active');
            document.body.style.overflow = '';
        }
        
        closeMenuButton.addEventListener('click', closeMobileMenu);
        
        mobileMenuOverlay.addEventListener('click', function(e) {
            if (e.target === mobileMenuOverlay) {
                closeMobileMenu();
            }
        });
        
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape' && mobileMenuOverlay.classList.contains('active')) {
                closeMobileMenu();
            }
        });
        
        // Geolocation for form localization
        async function detectUserCountry() {
            try {
                // Try IP-based geolocation
                const response = await fetch('https://ipapi.co/json/');
                const data = await response.json();
                
                if (data.country_name) {
                    // Update the selected country in dropdown
                    const selectedCountry = document.querySelector('.selected-country');
                    const countryOptions = document.querySelectorAll('.country-option');
                    
                    // Find matching country option
                    countryOptions.forEach(option => {
                        if (option.dataset.country === data.country_name) {
                            selectedCountry.textContent = `${option.dataset.flag} ${option.dataset.country} ${option.dataset.code}`;
                        }
                    });
                }
            } catch (error) {
                // Fallback to browser language
                const lang = navigator.language.split('-')[1]?.toUpperCase();
                if (lang) {
                    const countryMap = {
                        'US': '🇺🇸 United States +1',
                        'CA': '🇨🇦 Canada +1',
                        'GB': '🇬🇧 United Kingdom +44',
                        'AU': '🇦🇺 Australia +61',
                        'DE': '🇩🇪 Germany +49',
                        'FR': '🇫🇷 France +33',
                        'ES': '🇪🇸 Spain +34',
                        'IT': '🇮🇹 Italy +39',
                        'JP': '🇯🇵 Japan +81',
                        'CN': '🇨🇳 China +86',
                        'IN': '🇮🇳 India +91',
                        'BR': '🇧🇷 Brazil +55',
                        'MX': '🇲🇽 Mexico +52'
                    };
                    
                    if (countryMap[lang]) {
                        document.querySelector('.selected-country').textContent = countryMap[lang];
                    }
                }
            }
        }
        
        // Country dropdown functionality
        function toggleCountryDropdown(event) {
            event.preventDefault();
            const dropdown = event.target.closest('.relative').querySelector('.country-dropdown');
            dropdown.classList.toggle('hidden');
        }
        
        // Close dropdown when clicking outside
        document.addEventListener('click', function(event) {
            if (!event.target.closest('.relative')) {
                document.querySelectorAll('.country-dropdown').forEach(dropdown => {
                    dropdown.classList.add('hidden');
                });
            }
        });
        
        // Country selection
        document.addEventListener('click', function(event) {
            if (event.target.classList.contains('country-option')) {
                const selectedCountry = event.target.closest('.relative').querySelector('.selected-country');
                selectedCountry.textContent = `${event.target.dataset.flag} ${event.target.dataset.country} ${event.target.dataset.code}`;
                event.target.closest('.country-dropdown').classList.add('hidden');
            }
        });
        
        // Country search
        document.querySelectorAll('.country-search').forEach(searchInput => {
            searchInput.addEventListener('input', function(e) {
                const searchTerm = e.target.value.toLowerCase();
                const countryList = e.target.closest('.country-dropdown').querySelector('.country-list');
                const countries = countryList.querySelectorAll('.country-option');
                
                countries.forEach(country => {
                    const countryName = country.dataset.country.toLowerCase();
                    if (countryName.includes(searchTerm)) {
                        country.style.display = 'block';
                    } else {
                        country.style.display = 'none';
                    }
                });
            });
        });
        
        // Detect country on page load
        detectUserCountry();
    </script>

    
    
